{
  "name": "pop-exercise-contracts",
  "description": "PoP Exercise contracts",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "explorer.autoRevealExclude": {
    "**/node_modules": true,
    "**/bower_components": true
  },
  "workspaces": [
    "/"
  ],
  "repository": "https://github.com/fudgydrs/pop-smartcontracts",
  "author": "FudgyDRS (Charles Taylor)",
  "license": "None",
  "scripts": {
    "format:check": "prettier --check '*.{js,ts,sol}'",
    "format:write": "prettier --write '*.{js,ts,sol}'",
    "prepare": "husky install",
    "test:lerna": "lerna run test",
    "compile": "npx hardhat compile",
    "deploy:testnet": "npx hardhat run --network testnet scripts/deploy.ts",
    "deploy:mainnet": "npx hardhat run --network mainnet scripts/deploy.ts",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "test:size-contracts": "npx hardhat size-contracts"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.6.0",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-truffle5": "^2.0.7",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@openzeppelin/contracts": "^4.8.1",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.32.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.6",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.7.0",
    "hardhat-watcher": "^2.5.0",
    "husky": "^8.0.3",
    "lerna": "^6.4.1",
    "prettier": "^2.8.3",
    "prettier-plugin-solidity": "^1.1.1",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "web3": "^1.8.1"
  }
}
